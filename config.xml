<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sebastianhonert.ciell" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CIELL</name>
    <description>
        Comics for Inclusive English Language Learning
    </description>
    <author email="me@sebastianhonert.com" href="https://sebastianhonert.com">
        Sebastian Honert
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.2.0" />
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^8.1.0" />
    <engine name="ios" spec="^5.1.1" />
</widget>
